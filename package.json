{
  "name": "codetrackr",
  "displayName": "CodeTrackr",
  "description": "A VS Code extension to track your coding activities.",
  "version": "0.1.2",
  "publisher": "kianavega",
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:codetrackr.initialize"
  ],
  "scripts": {
    "start": "code --extensionDevelopmentPath=./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "pretest": "npm run compile && npm run lint",
    "test": "tsc -p ./ && node ./out/test/runTest.js",
    "vscode:prepublish": "npm run compile",
    "prepublishOnly": "npm run compile",
    "lint": "eslint src --ext ts"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "codetrackr.initialize",
        "title": "Initialize CodeTrackr"
      }
    ],
    "configuration": {
      "title": "CodeTrackr",
      "properties": {
        "codetrackr.commitInterval": {
          "type": "number",
          "default": 30,
          "description": "Interval (in minutes) for automatic commits."
        },
        "codetrackr.excludePaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules",
            "dist",
            ".git"
          ],
          "description": "List of files or directories to exclude from tracking."
        },
        "codetrackr.githubClientId": {
          "type": "string",
          "description": "GitHub Client ID"
        },
        "codetrackr.githubClientSecret": {
          "type": "string",
          "description": "GitHub Client Secret"
        }
      }
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/express": "^5.0.0",
    "@types/lodash": "^4.17.16",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^16.0.0",
    "mocha": "^11.1.0",
    "sinon": "^19.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^4.0.3",
    "typescript-eslint": "^8.26.1",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "@octokit/rest": "^21.1.1",
    "axios": "^1.8.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "node-fetch": "^2.7.0",
    "octokit": "^4.1.2",
    "simple-git": "^3.27.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kianavega/codetrackr"
  },
  "type": "commonjs"
}
