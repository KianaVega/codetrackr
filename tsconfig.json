{
  "compilerOptions": {
    "target": "ESNext", // Use modern JavaScript features
    "module": "CommonJS", // Use ES Modules
    "moduleResolution": "node", // Node.js module resolution
    "outDir": "./out", // Output directory for compiled JavaScript files
    "rootDir": "./src", // Root directory for source files
    "esModuleInterop": true, // Enable compatibility between CommonJS and ES modules
    "strict": true, // Enable strict type-checking options
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing for file names
    "resolveJsonModule": true, // Allow importing JSON files
    "allowSyntheticDefaultImports": true // Allow synthetic default imports for compatibility
  },
  "include": [
    "src/**/*.ts" // Include all TypeScript files in the src directory
  ]
}
